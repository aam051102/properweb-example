{
	"compilerOptions": {
		"baseUrl": ".",
		"rootDir": ".",
		"outDir": "./dist",
		"jsx": "preserve",
		"jsxFactory": "Proper.createElement",
		"jsxFragmentFactory": "Proper.fragment",
		"jsxImportSource": "properweb",
		"types": ["properweb"],
		"lib": [
			"DOM",
			"DOM.Iterable",
			"ESNext",
		],
		"noEmit": true,
		"noImplicitAny": false,
		"allowJs": true,
	},
	"include": [
		"./src/**/*.js",
		"./src/**/*.jsx",
		"./src/**/*.ts",
		"./src/**/*.tsx",
	],
	"exclude": [
		"node_modules",
		"./dist"
	]
}